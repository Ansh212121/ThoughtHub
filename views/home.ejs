<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
    <title>HOMEPAGE</title>
    <style>
        /* General Styles */
        body {
            background-color: #0e0e0e;
            color: #f5f5f5;
            font-family: 'Poppins', sans-serif;
        }

        .container {
            margin-top: 50px;
        }

        /* Hero Section */
        .hero {
            text-align: center;
            padding: 80px 20px;
            background: linear-gradient(135deg, #1a1a1a, #252525);
            border-radius: 15px;
            margin-bottom: 50px;
            box-shadow: 0px 6px 20px rgba(255, 195, 0, 0.2);
            animation: fadeIn 1s ease-in-out;
        }

        .hero h1 {
            font-size: 3rem;
            font-weight: 700;
            background: linear-gradient(90deg, #ffcc33, #ff9900);
            background-clip: text;
-webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 15px;
        }

        .hero p {
            font-size: 1.3rem;
            color: #d4d4d4;
            max-width: 800px;
            margin: 0 auto;
            line-height: 1.6;
        }

        .btn-cta {
            margin-top: 25px;
            display: inline-block;
            background: linear-gradient(90deg, #ffcc33, #ff9900);
            color: #121212;
            padding: 14px 22px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: transform 0.2s ease, background 0.3s ease;
        }

        .btn-cta:hover {
            transform: scale(1.08);
            background: linear-gradient(90deg, #e0951c, #ffb400);
        }

        /* Blog Grid */
        .blog-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 30px;
            justify-content: center;
            padding: 20px;
        }

        /* Blog Cards */
        .card {
            background-color: #1c1c1c;
            border-radius: 12px;
            box-shadow: 0px 5px 15px rgba(255, 195, 0, 0.15);
            overflow: hidden;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            animation: fadeInUp 0.8s ease-in-out;
        }

        .card:hover {
            transform: translateY(-6px);
            box-shadow: 0px 10px 25px rgba(255, 195, 0, 0.25);
        }

        .card-img-top {
            width: 100%;
            height: 220px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
            text-align: center;
        }

        .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #ffcc33;
            margin-bottom: 10px;
        }

        .card-text {
            font-size: 1rem;
            color: #b0b0b0;
            margin-bottom: 15px;
        }

        .btn-primary {
            display: inline-block;
            background: linear-gradient(90deg, #ffcc33, #ff9900);
            color: #121212;
            padding: 10px 16px;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: background 0.3s ease, transform 0.2s ease;
        }

        .btn-primary:hover {
            background: linear-gradient(90deg, #e0951c, #ffb400);
            transform: scale(1.05);
        }

        /* Animations */
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(-10px); }
            to { opacity: 1; transform: translateY(0); }
        }

        @keyframes fadeInUp {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }

        /* Responsive */
        @media (max-width: 768px) {
            .hero h1 {
                font-size: 2.4rem;
            }
            .hero p {
                font-size: 1.1rem;
            }
        }

    </style>
</head>
<body>
    <%- include('./partials/nav.ejs') %>
    
    <!-- Hero Section -->
    <div class="container">
        <div class="hero">
            <h1>Discover. Learn. Grow.</h1>
            <p>Welcome to ThoughtHub, your go-to destination for insightful blogs and fresh perspectives. Start exploring or share your own story!</p>
            <a href="/blog/add-new" class="btn-cta">Start Writing</a>
        </div>
    </div>

    <!-- Blog Cards Section -->
    <div class="container">
        <div class="blog-grid">
            <% blogs.forEach((element) => { %>
                <div class="card">
                    <img class="card-img-top" src="<%= element.coverImageURL %>" alt="BLOG IMAGE">
                    <div class="card-body">
                        <h5 class="card-title"><%= element.title %></h5>
                        <p class="card-text">An engaging snippet about this blog post to attract readers.</p>
                        <a href="/blog/<%= element._id %>" class="btn btn-primary">READ MORE</a>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>
    
    <%- include('./partials/scripts.ejs') %>  
</body>
</html>
